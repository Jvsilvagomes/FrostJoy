
generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Sorveteria {
  id          Int      @id @default(autoincrement())
  nome        String
  descricao   String?
  endereco    String
  telefone    String?
  fotoPerfil  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  sabores     Sabor[]
  fotos       Foto[]
}

model Foto {
  id            Int      @id @default(autoincrement())
  url           String
  descricao     String?
  sorveteriaId  Int

  sorveteria    Sorveteria @relation(fields: [sorveteriaId], references: [id])
}

model Tipo {
  id        Int      @id @default(autoincrement())
  nome      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sabores   Sabor[]
}

model Sabor {
  id            Int      @id @default(autoincrement())
  nome          String
  descricao     String?
  preco         Float
  imagem        String?
  sorveteriaId  Int
  tipoId        Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  sorveteria    Sorveteria @relation(fields: [sorveteriaId], references: [id])
  tipo          Tipo       @relation(fields: [tipoId], references: [id])
}
