
generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Sorveteria {
  id        Int      @id @default(autoincrement())
  nome      String
  endereco  String
  telefone  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sabores   Sabor[]
}

model Tipo {
  id        Int      @id @default(autoincrement())
  nome      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sabores   Sabor[]
}

model Sabor {
  id             Int      @id @default(autoincrement())
  nome           String
  descricao      String?
  preco          Float
  sorveteriaId   Int
  tipoId         Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  sorveteria     Sorveteria @relation(fields: [sorveteriaId], references: [id])
  tipo           Tipo        @relation(fields: [tipoId], references: [id])
}
